{
  "name": "photoflow",
  "author": "funcoding",
  "description": "PhotoFlow - 스마트 사진 정리 도구",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "build": {
    "appId": "funcoding",
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "out/**/*",
      "public/**/*",
      "node_modules/**",
      "package.json"
    ],
    "icon": "public/photoflow.png",
    "directories": {
      "output": "dist",
      "buildResources": "out"
    },
    "mac": {
      "target": ["zip", "dmg"],
      "identity": null,
      "hardenedRuntime": false,
      "notarize": false
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "scripts": {
    "dev": "concurrently \"next dev\" \"electron .\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "fix-html": "node scripts/fix-html-paths.js",
    "electron:build": "rm -rf dist && npm run build && npm run fix-html && electron-builder --publish=never",
    "electron:build:mac": "rm -rf dist && npm run build && npm run fix-html && electron-builder --mac --publish=never",
    "electron:build:win": "rm -rf dist && npm run build && npm run fix-html && electron-builder --win --publish=never",
    "electron:build:linux": "rm -rf dist && npm run build && npm run fix-html && electron-builder --linux --publish=never"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "exiftool-vendored": "^29.0.0",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.469.0",
    "next": "14.2.22",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-builder-notarize": "^1.5.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.22",
    "postcss": "^8",
    "tailwindcss": "^3.4.1"
  }
}

{
  "name": "my-photo-organizer",
  "author": "funcoding",
  "description": "A photo organizer application using Electron",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "build": {
    "appId": "com.yourapp.id",
    "files": [
      "main.js",
      "preload.js",
      "my-photo-organizer/.next/**",
      "node_modules/**"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "scripts": {
    "dev": "concurrently \"next dev\" \"electron .\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "exiftool-vendored": "^29.0.0",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.469.0",
    "next": "14.2.22",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8",
    "eslint-config-next": "14.2.22",
    "postcss": "^8",
    "tailwindcss": "^3.4.1"
  }
}
